{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "sourceMap": true,
    "paths": {
      "@lib/foo": ["dist/index.js"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["src/test/**/*"]
}
